<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/corner"
    android:orientation="horizontal"
    tools:context=".TitleFragment">

    <ImageView
        android:id="@+id/image_dian"
        android:layout_width="78dp"
        android:layout_height="76dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_dian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="常来吃吃"
                android:textColor="@color/title"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="19dp"
                android:gravity="center"
                android:text="起送价格￥"
                android:textColor="@color/title"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_distribution"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/title"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="4.9"
                android:textColor="@color/title"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_baseline_star_24" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text=" call : 188226666"
                android:textColor="@color/title"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_baseline_settings_phone_24" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:background="@color/back"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=" 点菜"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_baseline_restaurant_24" />

        <TextView
            android:id="@+id/tv_discuss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=" 评价"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_baseline_comment" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="拼单"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_baseline_people_24" />
    </LinearLayout>
</LinearLayout>